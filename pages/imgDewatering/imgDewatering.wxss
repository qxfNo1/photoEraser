/* pages/imgDewatering/imgDewatering.wxss */

  .imageView{
    width:750rpx;
    text-align: center;
    position: relative;
    background-color: #cc9999;
    overflow: hidden;
  }
  .toBlack{
    background-color: black;
    opacity:0.5;
    z-index: 10;
    
  }
  .toBlack .toTransparent{
    opacity:0.5;

  }
  .noImageBox{
    width:100%;
    height:100%;
    text-align: center;
    line-height: 1000rpx;
  }

  .imageView image{  
      position: absolute;
      display: block;
      margin: 0 auto;
      /* z-index: 2; */
     
  }


  .toolbar-bottom{
    
    width:100%;
    position: fixed;
    bottom: 0;
    height:400rpx;
    /* border-top: 1rpx solid #b17a7e; */
    background-color: #cc9999;
  }
  .imgOperate{
    margin-top: 100rpx;
    display: flex;
    justify-content: space-around;

  }
  .toolbar-bottom .text{
    flex: 1;
    height: 60rpx;
    text-align: center;
    padding:10rpx 0;
    margin:0 60rpx;
    border-radius: 30rpx;
      
  }
  .toolbar-bottom .chooseImg{
    background: green;
  }
  .toolbar-bottom .deWater{
    background: blue;
  }
  .toolbar-bottom .share{
    /* background: red; */
    text-align: center;
    margin:50rpx 0;
    color:blue;
    
  }
  .toolbar-bottom .share text{
    border-bottom: 1rpx solid blue;
    font-style: oblique;
  }
  .shareModal{
    display: flex;
    width:100%;
    position: fixed;
    bottom: 120rpx;
    height:280rpx;
    /* border-top: 1rpx solid #b17a7e; */
    background-color: #fff;
    border-radius: 30rpx;
    z-index:11;
  }
  .shareModal text{
    font-size: 60rpx;

  }
  .shareModal .text{
    font-size: 26rpx;

  }
  .shareModal .shareItem{
      display: flex;
      align-items: center;
      flex-direction: column;
      flex:1;
      margin:50rpx 0rpx;
      background: #fff;
  }
  .shareModal .cancel{
    position: fixed;
    bottom: 0;
    width: 100%;
    height:120rpx;
    /* background: green; */
    text-align: center;
     
  }
  .shareModal .cancel text{
    display: inline-block;
    width: 140rpx;
    height: 60rpx;
    font-size:30rpx;  
    line-height: 60rpx;
    border-radius: 30rpx;
    background: rgba(0,0,0,0.1);

  }